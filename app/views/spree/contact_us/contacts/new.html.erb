
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<% contact_information = Spree::ContactInformation.first %>

<%= form_for @contact, :url => contacts_path, :html => { :novalidate => '' } do |f| %>
  <div class="container">
  <div class="contact-wrap">
  <div class="row">
    <div class="title-content">
      <h1>Kontak</h1>
      <div class="separator"></div>
    </div>
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group fg-no-mt">
          <%= f.text_field :name, class: 'required form-control', id: "fullname" %>
          <span class="form-highlight"></span>
          <span class="form-bar"></span>
          <label class="desc-form" for="fullname">Nama</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group fg-no-mt">
          <%= f.email_field :email, class: 'required form-control email', id: "email" %>
          <span class="form-highlight"></span>
          <span class="form-bar"></span>
          <label class="desc-form" for="email">Email</label>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group fg-no-mt">
          <%= f.text_field :subject, class: 'required form-control', id: "subject"%>
          <span class="form-highlight"></span>
          <span class="form-bar"></span>
          <label class="desc-form" for="subject">Judul Pesan</label>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_area :message, class: 'required form-control', row: '5' %>
          <span class="form-highlight"></span>
          <span class="form-bar"></span>
          <label class="desc-form" for="message">Pesan</label>
        </div>
        <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :title => Spree.t(:submit), class: "btn ripple-effect btn-info" %>
      </div>
<% end %>
      <div class="col-md-6 separator-wrap">
        <div class="row">
          <div class="info-c-wrap">
            <div class="col-xs-3">
              <i class="la la-map-marker"></i>
            </div>
            <div class="col-xs-9">
              <h1>Alamat</h1>
              <p><%= contact_information.address %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="info-c-wrap">
          <div class="col-xs-3">
            <i class="la la-phone-square"></i>
          </div>
          <div class="col-xs-9">
            <h1>Telepon</h1>
            <p><%= contact_information.phone %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>

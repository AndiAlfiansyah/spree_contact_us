<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Page)), spree.admin_pages_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for resource, url: contact_information_path(resource) do |f| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <%= f.label :address %> <span class="required">*</span>
        <%= f.text_field :address, required: 'true', oninvalid: "this.setCustomValidity('Kolom ini tidak boleh kosong')", oninput: "setCustomValidity('')", class: 'form-control' %>
        <%= f.error_message_on :address %>
      </div>

      <div class="form-group">
        <%= f.label :phone %> <span class="required">*</span>
        <%= f.text_field :phone, required: 'true', oninvalid: "this.setCustomValidity('Kolom ini tidak boleh kosong')", oninput: "setCustomValidity('')", class: 'form-control' %>
        <%= f.error_message_on :phone %>
      </div>

      <%= submit_tag 'Simpan', class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
